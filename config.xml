<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.umontana.derivio" versionCode="2" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://cordova.gap.org/ns/1.0">
    <name>derivio</name>
    <description>
        Understand calculus through movement
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://www.math.umt.edu/roscoe/*" />
    <!--<access origin="http://www.math.umt.edu/roscoe/" subdomains="true" />-->
    <access origin="mailto:*" launch-external="yes"/>
    <preference name="BackupWebStorage" value="local"/>

    <access origin="cdvfile://*" />


    <gap:plugin name="de.martinreinhardt.cordova.plugins.email" version="0.8.2" />
    <plugin name="File" value="CDVFile" />
    <plugin name="FileTransfer" value="CDVFileTransfer" />

    <!-- <gap:plugin name="de.appplant.cordova.plugin.email-composer" version="0.8.2" /> -->
    
    <platform name="android">
        <preference name="Orientation" value="sensorLandscape" />
    </platform>
    
<platform name="android">

        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="ios">
        <preference name="Orientation" value="all" />
    </platform>

</widget>
